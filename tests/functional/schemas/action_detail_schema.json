{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "context": {
      "type": "string"
    },
    "context_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "script": {
      "type": "string"
    },
    "script_type": {
      "type": "string"
    },
    "script_config": {
      "type": "object",
      "properties": {
        "folder": {
          "type": "string"
        },
        "packages": {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        },
        "script": {
          "type": "string"
        }
      },
      "required": [
        "folder",
        "packages",
        "script"
      ]
    },
    "log_files": {
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "run": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "context",
    "context_id",
    "name",
    "type",
    "script",
    "script_type",
    "script_config",
    "log_files"
  ]
}
